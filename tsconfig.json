{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": false
  },
  "exclude": ["node_modules", "src/__tests__"]
}
